<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
      <%= confirm_text(:deactivate_user, user_name: @user.name) %>
    </h1>

    <%= govuk_warning_text text: warning_text(:deactivate_user, user_name: @user.name) %>

    <%= form_with(url: admin_manage_users_deactivated_users_path(active_user_id: @user)) do |f| %>
      <div class="govuk-button-group">
        <%= f.govuk_submit action_text(:confirm_deactivation) %>
        <%= govuk_link_to action_text(:abandon_deactivation), admin_manage_users_root_path  %>
      </div>
    <% end %>
  </div>
</div>
