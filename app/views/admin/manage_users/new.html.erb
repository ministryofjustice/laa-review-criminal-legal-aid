<% title t('.page_title') %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
      <%= t '.heading' %>
    </h1>
  </div>
</div>

<%= form_with model: @new_user_form, url: admin_manage_users_path do |f| %>

  <div class="govuk-form-group">
    <%= f.govuk_text_field :email,
                           class: 'govuk-!-width-one-third',
                           label: { text: t('.fields.email.label') },
                           hint: { text: t('.fields.email.hint_text') },
                           autocomplete: 'off' %>

    <%= f.govuk_check_box :can_manage_others,
                          true,
                          multiple: false,
                          label: { text: t('.fields.checkbox.label') } %>
  </div>

  <div class="govuk-button-group">
    <%= f.submit 'Add user', class: 'govuk-button govuk-button--primary' %>
    <%= link_to t('.cancel'),
                admin_manage_users_path,
                class: 'govuk-link--no-visited-state govuk-!-font-size-19' %>
  </div>
<% end %>
