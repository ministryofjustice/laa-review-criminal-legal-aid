<dl class="govuk-summary-list">
  <dt class="govuk-summary-list__key">
    <%= t(:assigned_to, scope: 'crime_applications.labels') %>
  </dt>
  <dd class="govuk-summary-list__value">
    <%= current_assignment.user_name %>
  </dd>

  <dd class="govuk-summary-list__action">
    <% if current_assignment.assigned_to_user?(current_user) %>
        <%= button_to t('calls_to_action.unassign_from_self'), assigned_application_path(current_assignment.application), method: :delete %>
    <% else %>
        <%= button_to t('calls_to_action.assign_to_self'), assigned_applications_path(crime_application_id: current_assignment.application.id), method: :post %>
    <% end %>
  </dd>
</dl>
