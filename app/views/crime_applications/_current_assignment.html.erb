<dl class="govuk-summary-list">
  <dt class="govuk-summary-list__key">
    <%= t(:assigned_to, scope: 'crime_applications.labels') %>
  </dt>
  <dd class="govuk-summary-list__value">
    <%= current_assignment.user_name %>
    <%= current_assignment.user_id %>
  </dd>

  <dd class="govuk-summary-list__action">
    <% if current_assignment.assigned_to_user?(current_user) %>
      <%= button_to t('calls_to_action.unassign_from_self'),
                    assigned_application_path(current_assignment.crime_application_id),
                    method: :delete,
                    class: 'govuk-button govuk-button--secondary' %>
    <% elsif current_assignment.assigned? %>
      <%= button_to t('calls_to_action.reassign_to_self'),
                    new_crime_application_reassign_path(
                      current_assignment.crime_application_id
                    ),
                    method: :get,
                    class: 'govuk-button govuk-button--secondary' %>
    <% else %>
      <%= button_to t('calls_to_action.assign_to_self'),
                    assigned_applications_path(
                      crime_application_id: current_assignment.crime_application_id
                    ),
                    method: :post,
                    class: 'govuk-button govuk-button--secondary' %>
    <% end %>
  </dd>
</dl>
