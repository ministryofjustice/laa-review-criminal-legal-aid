<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= @crime_application.reference %>
    </h1>

    <h2 class="govuk-heading-l">
      <%= @crime_application.applicant_name %>
    </h2>

    <%= render partial: 'current_assignment', locals: { crime_application: @crime_application } %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/subnavigation', locals: { crime_application: @crime_application } %>

    <h2 class="govuk-heading-m">
      <%= t('.page_title') %>
    </h2>

  <table class="govuk-table app-dashboard-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">
          <%= t('labels.when') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.who') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.what') %>
        </th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <%= render partial: 'history_item',
                 collection: @crime_application.history.items,
                 as: :event %>
    </tbody>
  </table>
  </div>
</div>
