<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <p class="govuk-body-l govuk-!-margin-bottom-2">
      <%= @crime_application.reference %>
    </p>

    <h2 class="govuk-heading-xl govuk-!-margin-bottom-4">
      <%= @crime_application.applicant_name %>
    </h2>

    <span class="govuk-tag govuk-tag--<%= t(@crime_application.review_status, scope: 'values.color') %> govuk-!-margin-bottom-6">
      <%= t(@crime_application.review_status, scope: 'values.review_status') %>
    </span>

    <%= render partial: 'assignment', locals: { crime_application: @crime_application } %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/subnavigation', locals: { crime_application: @crime_application } %>

    <h2 class="govuk-heading-m">
      <%= t('.page_title') %>
    </h2>

  <table class="govuk-table app-dashboard-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">
          <%= t('labels.when') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.who') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.what') %>
        </th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @crime_application.history.items.each do |item| %>
        <%= render partial: item, layout: 'history_item', as: :item, locals: { application: @crime_application } %>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
