<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= @crime_application.reference %>
    </h1>

    <h2 class="govuk-heading-l">
      <%= @crime_application.applicant_name %>
    </h2>

    <%= render partial: 'current_assignment', locals: { crime_application: @crime_application } %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'shared/subnavigation', locals: { crime_application: @crime_application } %>

    <h2 class="govuk-heading-m">
      <%= t('.page_title') %>
    </h2>

  <table class="govuk-table app-dashboard-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">
          <%= t('labels.when') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.who') %>
        </th>
        <th scope="col" class="govuk-table__header">
          <%= t('labels.what') %>
        </th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      <% @crime_application.history.items.each do |event| %>
        <tr class="govuk-table__row">
          <td scope="row" class="govuk-table__cell">
            <%= l event.timestamp, format: :timestamp %>
          </td>
          <td class="govuk-table__cell">
            <%= event.user_name %>
          </td>
          <td class="govuk-table__cell">
            <%= event.description %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
