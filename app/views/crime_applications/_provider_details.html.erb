<h2 class="govuk-heading-m">
  <%= t(:provider_details, scope: 'crime_applications.section.headings') %>
</h2>

<dl class="govuk-summary-list">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:office_account_number, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= provider_details.office_code %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:legal_representative, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= "#{provider_details.legal_rep_first_name} #{provider_details.legal_rep_last_name}" %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:provider_phone_number, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= provider_details.legal_rep_telephone %>
    </dd>
  </div>
</dl>
