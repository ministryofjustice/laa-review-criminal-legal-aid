<h2 class="govuk-heading-m">
  <%= t(:client_details, scope: 'crime_applications.section.headings') %>
</h2>

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:first_name, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= applicant.first_name %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:last_name, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= applicant.last_name %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:other_names, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= applicant.other_names.presence || t(:not_provided, scope: 'crime_applications.values') %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:date_of_birth, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= l applicant.date_of_birth, format: :compact %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:national_insurance_number, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= nino.presence || t(:not_provided, scope: 'crime_applications.values') %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:telephone_number, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= applicant_tel.presence || t(:not_provided, scope: 'crime_applications.values') %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:home_address, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <% if applicant.home_address %>
        <%= render 'crime_applications/address', address: applicant.home_address %>
      <% else %>
        <%= t(:not_provided, scope: 'crime_applications.values') %>
      <% end %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:correspondence_address, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
      <% if applicant.correspondence_address_type == 'other_address' %>
        <%= render 'crime_applications/address', address: applicant.correspondence_address %>
      <% else %>
        <%= t(applicant.correspondence_address_type, scope: 'values') %>
      <% end %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= t(:partner, scope: 'crime_applications.labels') %>
    </dt>
    <dd class="govuk-summary-list__value">
    <%# TODO Update this when has_partner provided by datastore %>
      <%= t(false, scope: 'values') %>
    </dd>
  </div>
</dl>
