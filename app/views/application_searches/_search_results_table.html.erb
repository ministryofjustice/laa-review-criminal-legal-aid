<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <table class="govuk-table app-dashboard-table" data-module="moj-sortable-table">
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <%= render partial: 'shared/sortable_table_heading', locals: form_params.merge({ column_name: 'applicant_name' })  %>
          <%= render partial: 'shared/sortable_table_heading', locals: form_params.merge({ column_name: 'reference' })  %>
          <%= render partial: 'shared/sortable_table_heading', locals: form_params.merge({ column_name: 'submitted_at' })  %>
          <th scope="col" class="govuk-table__header">
            <%= t('.table_headings.time_passed') %>
          </th>
          <th scope="col" class="govuk-table__header">
            <%= t(:common_platform, scope: 'crime_applications.labels') %>
          </th>
          <th scope="col" class="govuk-table__header">
            <%= t('.table_headings.caseworker') %>
          </th>
          <th scope="col" class="govuk-table__header">
            <%= t('.table_headings.status') %>
          </th>
        </tr>
      </thead>
      <%= render partial: 'search_results_table_body',
                 collection: results,
                 as: :result %>
    </table>
  </div>
</div>
