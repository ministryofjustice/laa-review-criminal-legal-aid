<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full govuk-!-margin-bottom-5">
    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>
    <%= render @filter %>
  </div>
</div>

<% if @search.results.empty? %>
  <%= render 'no_search_results'%>
<% else %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <h2 class="govuk-heading-s">
        <%= t('.total', count: @search.total) %>
      </h2>
    </div>
  </div>

  <%= render 'search_results_table', results: @search.results, form_params: { sorting: @sorting, filter: @filter, url: application_searches_path }  %>
<% end %>
