<% title @report.title %>

<%= render partial: 'block_pagination', locals: { report: @report } %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-3">
      <%= @report.title %>
    </h1>

    <% if @interval == ::Types::TemporalInterval['weekly'] %>
      <h2 class="govuk-heading-m"><%= @report.period_text %></h2>
    <% end %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <%= turbo_frame_tag [@report_type, @report.to_param], data: { turbo: 'true' } do %>
      <%= render partial: @report_type, locals: { report: @report } %>
    <% end %>
  </div>
</div>
