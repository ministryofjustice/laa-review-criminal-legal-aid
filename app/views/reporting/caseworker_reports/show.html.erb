<% title "#{@user.name} - Unassigned applications" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l"><%= @user.name %></h1>
    <h2 class="govuk-heading-m">Unassigned applications</h2>

    <% if @row && @row.unassigned_from_user_ids.any? %>
      <table class="govuk-table">
        <thead class="govuk-table__header">
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="col">Application</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <% @row.unassigned_from_user_ids.each do |assignment_id| %>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell"><%= assignment_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="govuk-body">No unassigned applications found.</p>
    <% end %>
  </div>
</div>
