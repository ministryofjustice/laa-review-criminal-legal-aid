<%= govuk_pagination(block_mode: true) do |p| %>
  <%= p.with_previous_page(
        label_text: report.previous_report.period_name,
        href: reporting_caseworker_temporal_report_path(report.previous_report.to_param.merge(user_id: @caseworker_id))
      ) %>

  <% unless report.current? %>
    <%= p.with_next_page(
          label_text: report.next_report.period_name,
          href: reporting_caseworker_temporal_report_path(report.next_report.to_param.merge(user_id: @caseworker_id))
        ) %>
  <% end %>
<% end %>
