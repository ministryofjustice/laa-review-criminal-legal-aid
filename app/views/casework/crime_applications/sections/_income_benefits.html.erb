<% if income_details.has_no_income_benefits == 'yes' ||  income_benefits.present? %>
  <%= govuk_summary_card(title: label_text(:benefits_the_client_gets)) do %>
    <dl class="govuk-summary-list">
      <% if income_details.has_no_income_benefits == 'yes' %>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            <%= label_text(:which_benefits_does_the_client_get) %>
          </dt>
          <dd class="govuk-summary-list__value">
            <%= t('values.none') %>
          </dd>
        </div>
      <% elsif income_benefits.any? %>
        <% income_benefits.each do |benefit_type, value| %>
          <%= render partial: 'payment_with_frequency',
                     locals: {
                       key: label_text("benefit_#{benefit_type}"),
                       payment: value,
                       does_not_text: t(:does_not_get, scope: 'values')
                     } %>
          <% if benefit_type == 'other' && value.present? %>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                <%= label_text(:other_benefits_details) %>
              </dt>
              <dd class="govuk-summary-list__value">
                <%= value.metadata.details %>
              </dd>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </dl>
  <% end %>
<% end %>
