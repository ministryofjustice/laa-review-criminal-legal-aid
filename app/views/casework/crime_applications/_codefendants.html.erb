<% if codefendants.any? %>
  <%= app_card_list(items: codefendants, item_name: label_text(:codefendant)) do |card|
        govuk_summary_list(actions: false) do |list|
          list.with_row do |row|
            row.with_key { label_text(:first_name) }
            row.with_value { card.item.first_name }
          end
          list.with_row do |row|
            row.with_key { label_text(:last_name) }
            row.with_value { card.item.last_name }
          end
          list.with_row do |row|
            row.with_key { label_text(:conflict_of_interest) }
            row.with_value { conflict_of_interest(card.item) }
          end
        end
      end %>
<% else %>
  <%= govuk_summary_card(title: label_text(:codefendants)) do
        govuk_summary_list(actions: false) do |list|
          list.with_row do |row|
            row.with_key { label_text(:has_codefendants) }
            row.with_value { value_text(:none) }
          end
        end
      end %>
<% end %>
