<%= govuk_summary_card(title: label_text(:interests_of_justice)) do
      govuk_summary_list(actions: false) do |list|
        if crime_application.interests_of_justice.empty?
          list.with_row do |row|
            row.with_key { label_text(:justification) }
            row.with_value { value_text(crime_application.relevant_ioj_passport) }
          end
        else
          crime_application.interests_of_justice.each do |ioj|
            list.with_row do |row|
              row.with_key { value_text(ioj.type) }
              row.with_value { simple_format(ioj.reason) }
            end
          end
        end
      end
    end %>
